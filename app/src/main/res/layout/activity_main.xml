<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <RelativeLayout
        android:id="@+id/layout1"
        android:layout_width="match_parent"
        android:layout_height="53dp"
        android:background="@drawable/grocery_icon">

        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:id="@+id/add_product_to_cart_btn"
            android:layout_width="91dp"
            android:layout_height="85dp"
            android:backgroundTint="@android:color/white"
            android:elevation="6dp"
            android:src="@drawable/nav_cart" />

        <TextView
            android:layout_width="246dp"
            android:layout_height="26dp"
            android:layout_marginLeft="34dp"
            android:layout_toRightOf="@id/add_product_to_cart_btn"
            android:text="GABIN GOCERY STORE"
            android:gravity="center"
            android:textColor="#FAFAFA"
            android:textSize="24sp"
            android:textStyle="bold" />


    </RelativeLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/layout1">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">


            <RelativeLayout
                android:id="@+id/layout2"
                android:layout_width="match_parent"
                android:layout_height="400dp">

                <ImageView
                    android:id="@+id/product_image"
                    android:layout_width="582dp"
                    android:layout_height="240dp"
                    android:scaleType="centerCrop"
                    app:srcCompat="@drawable/henze" />

                <TextView
                    android:id="@+id/product_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/product_image"
                    android:gravity="center"
                    android:text="HEINZ KETCHUP"
                    android:textColor="@color/colorPrimaryDark"
                    android:textSize="18sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/product_price"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/product_name"
                    android:gravity="center"
                    android:text="#250"
                    android:textColor="@color/colorPrimaryDark"
                    android:textSize="18sp"
                    android:textStyle="bold" />

                <com.cepheuen.elegantnumberbutton.view.ElegantNumberButton
                    android:id="@+id/number_button"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:elevation="6dp"
                    android:layout_below="@id/product_price"
                    android:layout_centerHorizontal="true"
                    app:finalNumber="20"
                    app:initialNumber="1"
                    app:textSize="16dp">

                </com.cepheuen.elegantnumberbutton.view.ElegantNumberButton>

            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/layout3"
                android:layout_width="match_parent"
                android:layout_height="434dp"
                android:layout_below="@id/layout2">


                <ImageView
                    android:id="@+id/product_image2"
                    android:layout_width="match_parent"
                    android:layout_height="280dp"
                    android:scaleType="centerCrop"
                    app:srcCompat="@drawable/cornflakes"

                    />

                <TextView
                    android:id="@+id/product_name2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/product_image2"
                    android:gravity="center"
                    android:text="SPARK CORNFLAKES"
                    android:textColor="@color/colorPrimaryDark"
                    android:textSize="18sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/product_price2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/product_name2"
                    android:gravity="center"
                    android:text="#800"
                    android:textColor="@color/colorPrimaryDark"
                    android:textSize="18sp"
                    android:textStyle="bold" />

                <com.cepheuen.elegantnumberbutton.view.ElegantNumberButton
                    android:id="@+id/number_button2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:elevation="6dp"
                    android:layout_below="@id/product_price2"
                    android:layout_centerHorizontal="true"
                    app:finalNumber="20"
                    app:initialNumber="1"
                    app:textSize="16dp">


                </com.cepheuen.elegantnumberbutton.view.ElegantNumberButton>


            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/layout4"
                android:layout_width="match_parent"
                android:layout_height="434dp"
                android:layout_below="@id/layout3">


                <ImageView
                    android:id="@+id/product_image3"
                    android:layout_width="match_parent"
                    android:layout_height="280dp"
                    android:scaleType="centerCrop"
                    app:srcCompat="@drawable/huzeng_pasta" />

                <TextView
                    android:id="@+id/product_name3"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/product_image3"
                    android:gravity="center"
                    android:text="HUZENG PASTA"
                    android:textColor="@color/colorPrimaryDark"
                    android:textSize="18sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/product_price3"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/product_name3"
                    android:gravity="center"
                    android:text="#250"
                    android:textColor="@color/colorPrimaryDark"
                    android:textSize="18sp"
                    android:textStyle="bold" />

                <com.cepheuen.elegantnumberbutton.view.ElegantNumberButton
                    android:id="@+id/number_button3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:elevation="6dp"
                    android:layout_below="@id/product_price3"
                    android:layout_centerHorizontal="true"
                    app:finalNumber="20"
                    app:initialNumber="1"
                    app:textSize="16dp">


                </com.cepheuen.elegantnumberbutton.view.ElegantNumberButton>


            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/layout5"
                android:layout_width="match_parent"
                android:layout_height="434dp"
                android:layout_below="@id/layout4">


                <ImageView
                    android:id="@+id/product_image4"
                    android:layout_width="match_parent"
                    android:layout_height="280dp"
                    android:scaleType="centerCrop"
                    app:srcCompat="@drawable/kingsmeal_bread"

                    />

                <TextView
                    android:id="@+id/product_name4"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/product_image4"
                    android:gravity="center"
                    android:text="KINGSMEAL BREAD"
                    android:textColor="@color/colorPrimaryDark"
                    android:textSize="18sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/product_price4"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/product_name4"
                    android:gravity="center"
                    android:text="#350"
                    android:textColor="@color/colorPrimaryDark"
                    android:textSize="18sp"
                    android:textStyle="bold" />

                <com.cepheuen.elegantnumberbutton.view.ElegantNumberButton
                    android:id="@+id/number_button4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:elevation="6dp"
                    android:layout_below="@id/product_price4"
                    android:layout_centerHorizontal="true"
                    app:finalNumber="20"
                    app:initialNumber="1"
                    app:textSize="16dp">


                </com.cepheuen.elegantnumberbutton.view.ElegantNumberButton>


            </RelativeLayout>
            <RelativeLayout
                android:id="@+id/layout6"
                android:layout_width="match_parent"
                android:layout_height="434dp"
                android:layout_below="@id/layout5">


                <ImageView
                    android:id="@+id/product_image5"
                    android:layout_width="match_parent"
                    android:layout_height="280dp"
                    android:scaleType="centerCrop"
                    app:srcCompat="@drawable/laphroaig_wine"

                    />

                <TextView
                    android:id="@+id/product_name5"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/product_image5"
                    android:gravity="center"
                    android:text="LAPHROAIG WINE"
                    android:textColor="@color/colorPrimaryDark"
                    android:textSize="18sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/product_price5"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/product_name5"
                    android:gravity="center"
                    android:text="#2500"
                    android:textColor="@color/colorPrimaryDark"
                    android:textSize="18sp"
                    android:textStyle="bold" />

                <com.cepheuen.elegantnumberbutton.view.ElegantNumberButton
                    android:id="@+id/number_button5"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:elevation="6dp"
                    android:layout_below="@id/product_price5"
                    android:layout_centerHorizontal="true"
                    app:finalNumber="20"
                    app:initialNumber="1"
                    app:textSize="16dp">


                </com.cepheuen.elegantnumberbutton.view.ElegantNumberButton>


            </RelativeLayout>
            <RelativeLayout
                android:id="@+id/layout7"
                android:layout_width="match_parent"
                android:layout_height="434dp"
                android:layout_below="@id/layout6">


                <ImageView
                    android:id="@+id/product_image6"
                    android:layout_width="match_parent"
                    android:layout_height="280dp"
                    android:scaleType="centerCrop"
                    app:srcCompat="@drawable/kensington_mayonnaise"

                    />

                <TextView
                    android:id="@+id/product_name6"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/product_image6"
                    android:gravity="center"
                    android:text="KENSINGTON MAYONNAISE"
                    android:textColor="@color/colorPrimaryDark"
                    android:textSize="18sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/product_price6"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/product_name6"
                    android:gravity="center"
                    android:text="#500"
                    android:textColor="@color/colorPrimaryDark"
                    android:textSize="18sp"
                    android:textStyle="bold" />

                <com.cepheuen.elegantnumberbutton.view.ElegantNumberButton
                    android:id="@+id/number_button6"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:elevation="6dp"
                    android:layout_below="@id/product_price6"
                    android:layout_centerHorizontal="true"
                    app:finalNumber="20"
                    app:initialNumber="1"
                    app:textSize="16dp">

                </com.cepheuen.elegantnumberbutton.view.ElegantNumberButton>


            </RelativeLayout>



        </RelativeLayout>


    </ScrollView>


</LinearLayout>






